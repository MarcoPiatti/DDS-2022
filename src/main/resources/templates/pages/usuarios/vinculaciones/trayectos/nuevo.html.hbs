{{#partial "contenido-usuario"}}
<div>
    <nav class="flex" aria-label="Breadcrumb" style="margin-top: 20px; margin-bottom: 20px">
      <ol class="inline-flex items-center space-x-1 md:space-x-3">
        <li class="inline-flex items-center">
          <a href="/usuarios/me/vinculaciones/{{vinculacion.id}}/trayectos" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white">
            Trayectos de {{vinculacionElegida.organizacion.razonSocial}}
          </a>
        </li>
        <li aria-current="page">
          <div class="flex items-center">
            <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg>
            <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2 dark:text-gray-400">Nuevo Trayecto</span>
          </div>
        </li>
      </ol>
    </nav>
    <div>
        <h3 class="mb-4 text-xl font-medium text-gray-900 " style="display: flex">Creá tu nuevo trayecto</h3>
        <h4 class="mb-4 text-l font-medium text-gray-500 " style="display: flex">Podés agregar los tramos que recorriste, y luego confirmarlo</h4>
    </div>
    <div style="display: flex;justify-content: space-around" >
        <div class="w-64">
          <a href="/usuarios/me/vinculaciones/{{vinculacion.id}}/trayectos/nuevo/tramos/nuevo/publico" type="submit" class="text-green-700 hover:text-white border border-green-700 hover:bg-green-800 focus:ring-4 focus:outline-none focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center w-full mb-2" style="margin-top: 10px">
            Nuevo Tramo Publico
          </a>
        </div>
        <div class="w-64">
          <a href="/usuarios/me/vinculaciones/{{vinculacion.id}}/trayectos/nuevo/tramos/nuevo/privado" type="submit" class="text-green-700 hover:text-white border border-green-700 hover:bg-green-800 focus:ring-4 focus:outline-none focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center w-full mb-2" style="margin-top: 10px">
            Nuevo Tramo Privado
          </a>
        </div>
    </div>

    <div class="overflow-x-auto relative shadow-md sm:rounded-lg">
        <table class="w-full text-sm text-left text-gray-500 ">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50  ">
            <tr>
                <th scope="col" class="py-3 px-6">
                    Origen
                </th>
                <th scope="col" class="py-3 px-6">
                    Destino
                </th>
                <th scope="col" class="py-3 px-6">
                    Tipo de Tramo
                </th>
                <th scope="col" class="py-3 px-6">
                    Medio de Transporte
                </th>
            </tr>
            </thead>
            <tbody>
            {{#each pretramos }}
                <tr class="bg-white border-b  ">
                    <td scope="row" class="py-4 px-6">
                        {{origen}}
                    </td>
                    <td class="py-4 px-6">
                        {{destino}}
                    </td>
                    <td class="py-4 px-6">
                        {{tipo}}
                    </td>
                    <td class="py-4 px-6">
                        {{medio}}
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
    <div style="margin-top: 20px">
        <form method="POST" action="/usuarios/me/vinculaciones/{{vinculacion.id}}/trayectos" style="display: flex">
            <input type="date" name="fecha" placeholder="Fecha" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5      " style="margin-right: 10px" required>
            <button type="submit"
                    class="w-full focus:ring-4 text-white focus:outline-none focus:ring-blue-500 font-bold rounded-lg text-sm px-5 py-2.5 text-center" style="background: #5E8C31; align:right">Confirmar Trayecto</button>
        </form>
    </div>
</div>
    {{#block "modal"}}{{/block}}
{{/partial}}
{{> components/LayoutUsuario.html.hbs}}

